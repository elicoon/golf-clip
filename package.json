{
  "name": "golfclip",
  "private": true,
  "workspaces": [
    "apps/browser"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/browser",
    "build": "npm run build -w apps/browser",
    "test": "npm run test -w apps/browser",
    "test:e2e": "npm run test:e2e -w apps/browser",
    "test:coverage": "npm run test:coverage -w apps/browser",
    "lint": "npm run lint -w apps/browser",
    "format": "npm run format -w apps/browser",
    "format:check": "npm run format:check -w apps/browser",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/browser/src/**/*.{ts,tsx}": [
      "eslint --fix --config apps/browser/eslint.config.js",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
